.intro {
  display: flex;
  height: 200rpx;

}

.radio {
  width: 60rpx;
  display: flex;
  align-items: center;
}

.select {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid black;
  border-radius: 50%;
}

.right {
  flex: 1;
  display: flex;
}

.img {
  width: 200rpx;
  background-color: blue;
}

.message {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.price {
  display: flex;
  justify-content: space-between;
}

.type {
  padding: 0 20rpx;
  background-color: #cccccc;
  text-align: center;
}

.number {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hamdle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 150rpx;
}

.jian,
.jia {
  width: 30rpx;
  height: 30rpx;
  background-color: #9fad1c;
  color: white;
