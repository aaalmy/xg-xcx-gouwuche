  height: 100rpx;
  position:fixed;
  bottom: 0rpx;
  display: flex;
  width: 100%;
  border-top: 1px solid #f2f2f2;

}
.totalPrize{
  width: 80%;
  right: 0rpx;

}
.totalNum{
  text-align: right;
}
