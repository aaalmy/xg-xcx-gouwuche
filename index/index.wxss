  text-align: center;
  font-weight: 900;
  line-height: 30rpx;
  border-radius: 50%;
}

.vanPopup {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 200rpx;
}

.typeList {
  background-color: yellow;
  padding: 0 20rpx;

}
.vantPopupHamdle {

 display: flex;
 justify-content: space-between;
